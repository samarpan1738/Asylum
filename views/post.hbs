<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Single Post</title>
    <link rel="stylesheet" href="/css/homepage.css">
    <script src="/js/posts.js" defer></script>
    <script src="/js/index.js" defer></script>
    {{!-- <script src="/js/post.js" defer></script> --}}
    <script defer>
        const loggedInUser = {{{ convert loggedInUser }}}
        const posts = {{{ convert posts }}}
        const user = {{{ convert user }}}
    </script>
</head>

<body>
    <div id="app">
        {{> sidebar}}
        <div class="hero-section">
            {{#each posts as |post|}}
            <h3 class="heading">{{post.author.displayName}}'s Post</h3>
            {{/each}}
            {{!-- <div class="post">
                <div class="post__content-left">
                    <img src="{{post.author.displayPic}}" alt="Display Pic">
                </div>
                <div class="post__content-right">
                    <div class="post__author__info">
                        <span class="post__author__display-name">{{post.author.displayName}}</span>
                        <span class="post__author__username">@{{post.author.username}}</span>
                        <span class="post__author__timestamp">{{post.createdAt}}</span>
                    </div>
                    <div class="post__content">
                        {{post.content}}
                    </div>
                    <div class="post__social-activity">
                        <div class="post__likes">
                            <a href="/post/{{post._id}}/like">
                                <svg viewBox="0 0 24 24" width="24" height="24">
                                    <g>
                                        <path
                                            d="M12 21.638h-.014C9.403 21.59 1.95 14.856 1.95 8.478c0-3.064 2.525-5.754 5.403-5.754 2.29 0 3.83 1.58 4.646 2.73.814-1.148 2.354-2.73 4.645-2.73 2.88 0 5.404 2.69 5.404 5.755 0 6.376-7.454 13.11-10.037 13.157H12zM7.354 4.225c-2.08 0-3.903 1.988-3.903 4.255 0 5.74 7.034 11.596 8.55 11.658 1.518-.062 8.55-5.917 8.55-11.658 0-2.267-1.823-4.255-3.903-4.255-2.528 0-3.94 2.936-3.952 2.965-.23.562-1.156.562-1.387 0-.014-.03-1.425-2.965-3.954-2.965z">
                                        </path>
                                    </g>
                                </svg>
                            </a>
                            <span class="post__like-count">{{post.likeCount}}</span>
                        </div>
                        <div class="post__comments">
                            <a href="/post/{{post._id}}">
                                <svg viewBox="0 0 24 24" width="24" height="24">
                                    <g>
                                        <path
                                            d="M14.046 2.242l-4.148-.01h-.002c-4.374 0-7.8 3.427-7.8 7.802 0 4.098 3.186 7.206 7.465 7.37v3.828c0 .108.044.286.12.403.142.225.384.347.632.347.138 0 .277-.038.402-.118.264-.168 6.473-4.14 8.088-5.506 1.902-1.61 3.04-3.97 3.043-6.312v-.017c-.006-4.367-3.43-7.787-7.8-7.788zm3.787 12.972c-1.134.96-4.862 3.405-6.772 4.643V16.67c0-.414-.335-.75-.75-.75h-.396c-3.66 0-6.318-2.476-6.318-5.886 0-3.534 2.768-6.302 6.3-6.302l4.147.01h.002c3.532 0 6.3 2.766 6.302 6.296-.003 1.91-.942 3.844-2.514 5.176z">
                                        </path>
                                    </g>
                                </svg>
                            </a>
                            <span class="post__comment-count">{{post.commentCount}}</span>
                        </div>
                    </div>
                </div>
            </div> --}}
            {{> postsContainer}}
            <h3 class="heading">Comments</h3>
            <div class="create-comment">
                <form action="/post/{{post._id}}/comment" method="POST">
                    <!-- <input type="text" placeholder="What's happening?" name="content" id="create-post__content">  -->
                    <textarea id="create-comment__content" name="content" rows="1" cols="50"
                        placeholder="What's happening?"></textarea>
                    <button type="submit" id="comment-btn">Comment</button>
                </form>
            </div>
            <div class="comments-container">
                {{#each posts as |post|}}
                {{#each post.comments as |comment|}}
                {{!-- <div class="comment"> --}}
                <div class="post" id="c_{{comment._id}}">
                    <div class="post__content-left">
                        <img src="{{comment.author.displayPic}}" alt="Display Pic">
                    </div>
                    <div class="post__content-right">
                        <div class="post__author__info">
                            <span class="post__author__display-name">{{comment.author.displayName}}</span>
                            <span class="post__author__username">@{{comment.author.username}}</span>
                            <span class="post__author__timestamp">{{comment.createdAt}}</span>
                        </div>
                        <div class="post__content">
                            {{comment.content}}
                        </div>
                        <div class="post__social-activity">
                            <div class="post__likes">
                                <a href="/post/{{comment.post._id}}/comment/{{comment._id}}/like">
                                    <svg viewBox="0 0 24 24" width="24" height="24" fill="white" stroke="black">
                                        <g>
                                            <path class="likeBtn"
                                                d="M12 21.638h-.014C9.403 21.59 1.95 14.856 1.95 8.478c0-3.064 2.525-5.754 5.403-5.754 2.29 0 3.83 1.58 4.646 2.73.814-1.148 2.354-2.73 4.645-2.73 2.88 0 5.404 2.69 5.404 5.755 0 6.376-7.454 13.11-10.037 13.157H12z">
                                            </path>
                                        </g>
                                    </svg>
                                </a>
                                <span class="post__like-count">{{comment.likeCount}}</span>
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- </div> --}}
                {{/each}}
                {{/each}}
            </div>
</body>

</html>